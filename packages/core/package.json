{
        "name": "@afterdarktk/core",
        "version": "0.1.0",
        "main": "dist/index.js",
        "types": "dist/index.d.ts",
        "scripts": {
                "clean": "rm -rf dist",
                "build": "npm run clean && npm run build:ts && npm run build:bundle",
                "build:ts": "tsc -p tsconfig.json",
                "build:bundle": "tsup",
                "check": "tsc --noEmit -p tsconfig.json",
                "test": "vitest run",
                "coverage": "vitest run --coverage"
        },
        "type": "module",
        "dependencies": {
                "@afterdarktk/shared": "workspace:*",
                "ts-morph": "^27.0.2",
                "vitest": "^4.0.8"
        }
}
